{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "exclude": [
    "logs",
    "node_modules",
    "jest.config.ts"
  ]
}
